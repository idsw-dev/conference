---
import "@fontsource-variable/inter";
import "./styles.css";
import Header from "./components/Header";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:image" content="/og.jpg" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:image" content="/og.jpg" />
    <meta
      name="description"
      content="Join us for the Indonesia Software Developer Conference (IDSW) on 22-23rd November, 2025. Indonesia's premier software developer conference bringing together developers, engineers, and technology enthusiasts."
    />
    <meta
      name="keywords"
      content="Indonesia Software Developer Conference, IDSW, software development, conference, Jakarta, 2025, developers, networking, technology"
    />
    <meta name="author" content="IDSW Organizers" />
    <meta property="og:title" content="Indonesia Software Developer Conference 2025" />
    <meta
      property="og:description"
      content="Join us for the Indonesia Software Developer Conference (IDSW) on 22-23rd November, 2025. Indonesia's premier software developer conference bringing together developers, engineers, and technology enthusiasts."
    />
    <meta property="og:url" content="https://www.idsw.dev" />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="IDSW" />
    <meta name="twitter:title" content="Indonesia Software Developer Conference 2025" />
    <meta
      name="twitter:description"
      content="Join us for the Indonesia Software Developer Conference (IDSW) on 22-23rd November, 2025. Indonesia's premier software developer conference bringing together developers, engineers, and technology enthusiasts."
    />

    <title>IDSW</title>
  </head>
  <body>
    <main class="font-sans">
      <Header />
      <slot />
    </main>
    <script>
      import posthog from "posthog-js";
      const posthogId = import.meta.env.PUBLIC_POSTHOG_ID;

      if (posthogId) {
        posthog.init(`${posthogId}`, {
          api_host: "https://us.i.posthog.com",
        });
      }
    </script>
  </body>
</html>
