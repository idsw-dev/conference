---
import Layout from "../2025/layout.astro";
import Timer from "../2025/components/Timer";
import { ArrowLeft, Brain, Code2, Mail, Users } from "lucide-react";
import CardSpeaker from "../2025/components/CardSpeaker.astro";
import type { Speaker } from "../2025/@types/speakers";
import Accordion from "../2025/components/Accordion";
import type { Faq } from "../2025/@types/faq";

const faq = await Astro.glob("../2025/data/faq.json");
const speakers = await Astro.glob("../2025/data/speakers.json");

const speakersData: Speaker[] = Object.values(speakers).map((item) => (item as any).default)[0];
const faqData: Faq[] = Object.values(faq).map((item) => (item as any).default)[0];
---

<Layout>
  <section id="hero" class="bg-dark relative flex w-full flex-col py-32 text-gray-900">
    <div class="container">
      <div
        class="gradient-blue card animate-fade-up animation-delay-400 space-y-4 rounded-lg bg-gradient-to-br from-white to-[#CAE1FF] px-4 py-12 text-center shadow-lg backdrop-blur-sm">
        <h1
          class="mx-auto max-w-[700px] bg-gradient-to-br from-[#0B2B5B] to-[#3b82f6] bg-clip-text text-center text-2xl font-bold tracking-tight text-transparent text-white md:text-5xl lg:text-[40px]">
          The Biggest Community-Led Developer Conference in Indonesia
        </h1>
        <p class="mb-0 text-white">22-23 November 2025 | 08.30 - 17.30 WIB</p>
        <p class="text-white">Usmar Ismail Hall, Jakarta Selatan.</p>
        <div class="flex justify-center">
          <a
            href="https://www.loket.com/event/idsw-2025"
            target="_blank"
            class="inline-flex items-center justify-center rounded-lg bg-white px-6 py-3 text-base font-medium text-[#00235D] transition-all duration-300 hover:scale-105 hover:shadow-xl">
            Get Your Tickets Now !
          </a>
        </div>
        <div class="flex flex-col items-center gap-3">
          <Timer client:load />
        </div>
      </div>
    </div>
  </section>

  <section id="description" class="py-8">
    <div class="container text-center">
      <p class="px-8 text-xl leading-relaxed text-white">
        IDSW 2025 is Indonesia’s biggest community-led developer conference. Organized by Perkodi and various tech
        communities, this year’s mission is to explore Artificial Intelligence and its impact through in-depth sessions,
        discussions, and collaboration.
      </p>
    </div>
  </section>

  <!-- About Section -->
  <section class="from-dark to-darkblue relative z-10 bg-gradient-to-b py-12 text-white">
    <div class="container mx-auto max-w-6xl px-4">
      <div class="mx-auto max-w-4xl text-center">
        <div class="section-header mb-8">
          <h2 class="mb-2 text-2xl font-bold md:text-3xl">Meet Our Speakers</h2>
          <span class="text-xl">Experts from across the tech community</span>
        </div>
        <div class="section-content">
          <div class="grid grid-cols-1 gap-6 text-left md:grid-cols-3">
            {speakersData.map((speaker) => <CardSpeaker data={speaker} />)}
          </div>
        </div>
      </div>
    </div>
  </section>

  <section id="faq" class="gradient-blue py-18 text-white">
    <div class="container text-center">
      <div class="section-header">
        <h2 class="mb-3 text-center text-3xl !leading-relaxed font-bold md:text-4xl">Frequently Asked Questions</h2>
      </div>
      <Accordion data={faqData} client:load />

      <hr class="my-8" />

      <h2 class="mb-5 text-3xl font-bold">Updates & Questions</h2>
      <p class="mb-5 text-xl">
        See the event update on our social media platforms and contact us if you have any questions.
      </p>

      <ul class="flex justify-center">
        <li>
          <a
            href="placeholder"
            target="_blank"
            rel="noopener noreferrer"
            class="flex min-h-8 min-w-8 items-center rounded bg-white/20 p-3">
            <img src="/2025/icons/x.svg" alt="X" class="h-6 w-6" />
          </a>
        </li>
      </ul>
    </div>
  </section>
</Layout>
