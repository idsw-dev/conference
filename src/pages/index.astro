    <div class="container">
      <div class="grid grid-cols-12">
        <div class="agenda-left relative col-span-12 items-end pb-0 lg:col-span-3 lg:block">
          <div class="bg-to-start bg-primary-dark"></div>
          <div class="agenda-text text-white">
            <h1 class="mb-12 text-3xl font-bold lg:text-5xl">Event Agenda</h1>
            <div class="flex flex-col gap-5 text-left">
              <button class="w-full bg-lightblue p-5 text-left text-2xl font-bold">First Day</button>
              <button
                class="w-full bg-white/10 p-5 text-left text-2xl font-bold text-white/60 transition hover:bg-lightblue/20 hover:text-white/80">
                Second Day
              </button>
            </div>
          </div>
        </div>
        <div class="agenda-right relative col-span-12 grid flex-shrink grid-cols-subgrid flex-col lg:col-start-5">
          {agendaData.map((agenda) => <EventCard data={agenda} />)}
        </div>
      </div>
    </div>
  </section> -->
  <section id="speakers">
    <div class="container">
      <div class="grid grid-cols-12">
        <div class="faq-left relative col-span-12 items-end py-24 pr-8 lg:col-span-4 lg:block">
          <div class="bg-to-start bg-lightblue">
            <!-- <img
              src="/logo-white.svg"
              alt=""
              class="grid-col absolute -bottom-8 right-4 hidden w-[520px] lg:mb-8 lg:block"
            /> -->
          </div>
          <div class="faq-text text-white">
            <h1 class="mb-3 text-3xl font-bold md:text-5xl">Our Esteemed Speakers</h1>
          </div>
        </div>
        <div class="faq-right relative col-span-12 flex-shrink flex-col bg-primary-dark px-8 py-24 lg:col-span-8">
          <div class="bg-to-end bg-primary-dark"></div>
          <div class="speakers grid grid-cols-2 gap-5 lg:grid-cols-4">
            {speakersData.map((speaker) => <CardSpeaker data={speaker} />)}
          </div>
        </div>
      </div>
    </div>
  </section>
  <section id="faq" class="">
    <div class="container">
      <div class="grid grid-cols-12">
        <div class="faq-left relative col-span-12 items-end py-24 pr-8 lg:col-span-4 lg:block">
          <div class="bg-to-start bg-primary-dark"></div>
          <div class="faq-text text-white">
            <h1 class="mb-3 text-3xl font-bold md:text-5xl">FAQ</h1>
            <p class="text-lg text-gray-400">Frequently Asked Questions</p>
          </div>
        </div>
        <div class="faq-right relative col-span-12 flex-shrink flex-col px-8 py-24 lg:col-span-8 lg:px-16">
          <div class="bg-to-end bg-[#E7F1FF]"></div>
          <Accordion data={faqData} client:load />
        </div>
      </div>
    </div>
  </section>
</MainLayout>
