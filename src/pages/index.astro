---
import Button from "../components/Button/Button";
import Timer from "../components/Timer";
import MainLayout from "../layouts/MainLayout.astro";
import "../styles/landing.css";

const eventDate = new Date(2024, 10, 17, 9, 0, 0);
---

<MainLayout>
  <section id="hero" class="flex min-h-dvh items-center justify-center">
    <div class="container mx-auto flex flex-col items-center gap-8">
      <div class="flex flex-col items-center gap-4 text-center">
        <span
          class="rounded-full border border-white/40 bg-white/10 px-4 py-2 text-sm text-white/80"
          >16-17th November, 2024 â€¢ Jakarta, ID</span
        >
